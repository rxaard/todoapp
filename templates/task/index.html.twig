{% block body %}
    <div class="container">
        <table class="table table-stripped table-bordered" id="tasksTable">
            <thead>
                <th>Id</th>
                <th>Nom</th>
                <th>Date effective</th>
            </thead>
            <tbody>
            {% if tasks is defined %}
                {% for task in tasks%}
                <tr>
                    <th scope="row">{{task.id}}</th>
                    <td>{{task.name}}</td>
                    <td>{{task.dueAt | date('d/m/y H:1')}}</td>
                </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>

    </div>

{% endblock %}
